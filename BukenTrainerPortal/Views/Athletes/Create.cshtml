@model Athlete

<form method="post">
  <div class="border pt-3 mt-4">

    <div class="row pb-2">
      <h2 class="text-primary">Create an Athlete</h2>
      <hr />
    </div>

    <div class="mb-3 p-1">
      <label asp-for="FirstName" class="p-0"></label>
      <input asp-for="FirstName" type="text" class="form-control">
      <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="mb-3 p-1">
      <label asp-for="LastName" class="p-0"></label>
      <input asp-for="LastName" type="text" class="form-control">
      <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="mb-3 p-1">
      <label asp-for="CoachId" class="p-0"></label>
      <select asp-for="CoachId" class="form-control" asp-items="@(new SelectList(ViewBag.CoachList, "ID", "FullName"
        ))">
        <option selected disabled>-- Select Coach --</option>
      </select>
      <span asp-validation-for="CoachId" class="text-danger"></span>
    </div>

    <div class=" row text-center">
      <div class="col-6">
        <button type="submit" class="btn btn-primary form-control">Create</button>
      </div>
      <div class="col-6">
        <a asp-controller="Athletes" asp-action="Index" class="btn btn-secondary form-control">Back to Index</a>
      </div>
    </div>
  </div>
</form>

@section Scripts{
  @{
    <partial name="_ValidationScriptsPartial"/>
  }
}
