@model List<Athlete>

  <div class="container text-center">
    <div class="row pt-4">

      <div class="col-6 text-start">
        <h1>
          <i class="bi bi-person-badge-fill"></i>
          Athletes List
        </h1>
      </div>
      <div class="col-6 text-end pb-3">
        <a asp-controller="Athletes" asp-action="Create" class="btn btn-primary">
          <i class="bi bi-plus-circle"></i> Add Athlete
        </a>
      </div>
    </div>
  </div>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Coach ID</th>
        <th>Coach Name</th>
      </tr>
    </thead>
    <tbody>
      @foreach(var obj in Model)
      {
      <tr>
        <td>@obj.FirstName</td>
        <td>@obj.LastName</td>
        <td>@obj.CoachId</td>
        <td>@obj.Coach.FirstName @obj.Coach.LastName</td>
      </tr>
      }
    </tbody>
  </table>
